<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Dashboard Button -->
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
    </style>

    <!-- ActionBarSherlock Red -->
    <style name="Theme.ABSRed" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.ABSRed.ActionBar</item>
    </style>

    <style name="Theme.ABSRed.ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">#CC0000</item>
        <item name="titleTextStyle">@style/Theme.ABSRed.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/Theme.ABSRed.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.ABSRed.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>